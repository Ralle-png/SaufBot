#:kivy 2.1.0
ScreenManager:
    StartScreen:
    MenuScreen:
    MixerScreen:
    LuckyScreen:
    KonfiScreen:
    ManagerScreen:

<StartScreen>:
    name:'start'
    BoxLayout:
        Button:
            size_hint: 1, .4
            pos_hint: {"center_y": .5}
            text:"Alle Drinks"
            on_press: root.manager.current = 'menu'
        Button:
            text:"Drinkmixer"
            size_hint: 1, .4
            pos_hint: {"center_y": .5}
        Button:
            text:"Im feeling lucky"
            size_hint: 1, .4,
            pos_hint: {"center_y": .5}
        Button:
            text:"Konfigurieren"
            size_hint: 1, .4
            pos_hint: {"center_y": .5}
        Button:
            text:"Backend"
            size_hint: 1, .4
            pos_hint: {"center_y": .5}

<MenuScreen>:
    name:'menu'
    BoxLayout:
        orientation:'horizontal'
        spacing: 5

        #  Butons + Drinks
        BoxLayout:
            size_hint: .3, 1

            BoxLayout:
                orientation: "vertical"
                # Buttons
                BoxLayout:
                    size_hint: 1, .1
                    Button:
                        text:'<-'
                        on_press: root.on_button_click(self)
                    Label:
                        text:root.buchstabe
                    Button:
                        text:'->'
                        on_press: root.on_button_click(self)
                # Drinks
                ScrollView:
                    id: ds2
                    DrinkStack:
                        id: ds1
                        size_hint: 1, None
                        height: self.minimum_height





        BoxLayout:
            orientation:'vertical'

            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    orientation: 'horizontal'
                    BoxLayout:
                        orientation: 'vertical'
                        Label:
                            id: titel
                            text: root.titel
                            size_hint: 1, .5
                        Label:
                            id: zutaten
                            text: root.zutaten
                        Label:
                            id: alkgehalt
                            text: root.alkgehalt
                            size_hint: 1, .5
                    BoxLayout:
                        size_hint: .2, 1
                        BoxLayout:
                            size_hint: .3, 1
                            orientation:'vertical'
                            Button:
                                text:'hart'
                            Button:
                                text:'normal'
                            Button:
                                text:'leicht'
                        Slider:
                            size_hint: .2, 1
                            orientation: 'vertical'

            BoxLayout:
                orientation:'horizontal'
                size_hint: 1, .2
                Button:
                    size_hint: .8, 1
                    text: 'Bestellen'

                Button:
                    size_hint: .2, 1
                    text:'Zur√ºck'
                    on_press: root.manager.current = 'start'
<MixerScreen>:
    name:'mixer'

<LuckyScreen>:
    name:'lucky'

<KonfiScreen>:
    name:'konfi'

<ManagerScreen>:
    name:'manager'

